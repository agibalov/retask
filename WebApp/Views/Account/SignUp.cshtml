@using WebApp
@model WebApp.Models.SignUpModel

<div class="registration-form">
    <div class="container">
        <h1>Sign up</h1>

        <form class="form-horizontal" method="POST" action="@Url.Action("SignUp", "Account")">
            <div class="control-group @Html.AddClassIfPropertyInError(x => x.Email, "error")">
                <label class="control-label">Email</label>
                <div class="controls">
                    <input type="text" placeholder="Email" name="Email" value="@Html.ValueFor(x => x.Email)" />
                    <span class="help-inline">@Html.ValidationMessageFor(x => x.Email)</span>
                </div>
            </div>
            <div class="control-group @Html.AddClassIfPropertyInError(x => x.Password, "error")">
                <label class="control-label">Password</label>
                <div class="controls">
                    <input type="password" placeholder="Password" name="Password" />
                    <span class="help-inline">@Html.ValidationMessageFor(x => x.Password)</span>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <p>
                        By signing up, you agree to our <a href="@Url.Action("Disclaimer", "Home")">Disclaimer</a>.
                    </p>
                    <button class="btn btn-large btn-green" type="submit">Sign Up</button>
                </div>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-error">
                @ViewBag.Message
            </div>
        }
    </div>
</div>
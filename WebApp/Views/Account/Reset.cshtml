@using WebApp
@model WebApp.Models.ResetPasswordModel

<div class="registration-form">
    <div class="container">
        <h1>Reset Password</h1>

        <form class="form-horizontal" method="POST" action="@Url.Action("Reset", "Account")">
            <input type="hidden" name="Secret" value="@Model.Secret" />
            <div class="control-group @Html.AddClassIfPropertyInError(x => x.Password, "error")">
                <label class="control-label">Password</label>
                <div class="controls">
                    <input type="password" placeholder="Password" name="Password" />
                    <span class="help-inline">@Html.ValidationMessageFor(x => x.Password)</span>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button class="btn btn-large btn-green" type="submit">Reset Password</button>
                </div>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-error">
                @ViewBag.Message
            </div>
        }
    </div>
</div>